<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context="xyz.u999.creations.numer.activities.SplashActivity">


    <TextView
        android:id="@+id/no_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:gravity="center"
        android:text="@string/no_connection"
        android:textColor="@color/mdl_cardview_highlight_button_color"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="237dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/no_connection_dialoge"
        android:textColor="@color/carbon_white"
        android:textSize="19sp" />


</RelativeLayout>
